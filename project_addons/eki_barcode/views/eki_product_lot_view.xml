<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="eki_product_lot_form_view" model="ir.ui.view">
            <field name="name">eki.product.lot.form.view</field>
            <field name="model">eki.product.lot</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="date" readonly="1"/>
                        </group>
                        <field name="lot_picture" widget="image"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="eki_product_lot_tree_view" model="ir.ui.view">
            <field name="name">eki.product.lot.tree.view</field>
            <field name="model">eki.product.lot</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="eki_product_lot_barcode_form_view" model="ir.ui.view">
            <field name="name">eki.product.lot.barcode.form.view</field>
            <field name="model">eki.product.lot</field>
            <field name="sequence">1000</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="product_id"/>
                        <field name="lot_picture" widget="image"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>