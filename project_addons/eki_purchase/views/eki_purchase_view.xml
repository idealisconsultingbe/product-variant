<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="eki_purchase_purchase_order_form" model="ir.ui.view">
            <field name="name">eki.purchase.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_confirm']" position="after">
                    <button name="update_vidange" type="object" string="Update Vidange" attrs="{'invisible' : [('state', '!=', 'draft')]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree" position="attributes">
                    <attribute name="decoration-warning">eki_is_product_under_min_stock==True</attribute>
                </xpath>
                <xpath  expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                    <field name="eki_is_product_under_min_stock" invisible="1"/>
                </xpath>
                <xpath  expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="before">
                    <field name="eki_product_qty_available"/>
                    <field name="eki_product_sales_x_days"/>
                </xpath>
                <xpath  expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="before">
                    <field name="eki_discount"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>