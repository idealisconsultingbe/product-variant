<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_supplierinfo_discount_form_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.discount.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='date_start']" position="before">
                    <field name="eki_discount"/>
                </xpath>
            </field>
        </record>

        <record id="product_supplierinfo_discout_tree_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.discount.tree.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <field name="price" position="after">
                    <field name="eki_discount"/>
                </field>
            </field>
        </record>
    </data>
</odoo>