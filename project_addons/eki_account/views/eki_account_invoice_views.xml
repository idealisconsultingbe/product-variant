<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="eki_account_invoice_supplier_form" model="ir.ui.view">
            <field name="name">eki.account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reference']" position="attributes">
                    <attribute name="required">[('type', 'in', ['in_invoice'])] </attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>